rli.lol {
    # Автоматический SSL от Let's Encrypt
    tls levdmytriev@gmail.com

    # Редирект HTTP -> HTTPS
    @http {
        protocol http
    }
    redir @http https://{host}{uri} permanent

    # Проксирование с проверкой работоспособности
    reverse_proxy / {
        to app:3000
        health_uri /
        health_interval 30s
        health_timeout 5s
    }
}